@model ConciliadorFinanceiro.Base.Domain.Entities.LancamentoFinanceiro

@{
    ViewData["Title"] = "Detalhar";
}

<h1>Detalhar lançamento</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DataHoraLancamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHoraLancamento)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Enum.GetName(typeof(ConciliadorFinanceiro.Base.Domain.Enums.TipoLancamento), Model.Tipo)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Enum.GetName(typeof(ConciliadorFinanceiro.Base.Domain.Enums.StatusLancamento), Model.Status)
        </dd>
    </dl>
</div>

<div class="form-group">

    @if (Model.Status != (int)ConciliadorFinanceiro.Base.Domain.Enums.StatusLancamento.Conciliado)
    {
        @Html.ActionLink("Editar", "Editar", new { id = Model.Id }, new { @class = "btn btn-primary" })
    }

    <a asp-action="Index" class="btn btn-primary">Cancelar</a>
</div>
